@model ECommerceMVC.ViewModels.ChiTietHoaDonVM
@{
    ViewData["Title"] = "Detail";
    double PhiVanChuyen = Model.PhiVanChuyen;
    double TongTienHang = Model.ChiTietHd.Sum(p => p.DonGia);
    double ThanhTien = TongTienHang + PhiVanChuyen;
}

<h1>Chi tiết đơn hàng</h1>
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietHd)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
                                        <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.TenHh">
                                    </a>
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">
                                    <a asp-action="Detail" asp-controller="HangHoa" asp-route-id="@item.MaHh">
                                        @item.TenHh
                                    </a>
                                </p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">$ @item.DonGia</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Thông tin đơn hàng </h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Tổng tiền hàng:</h5>
                            <p class="mb-0">$ @TongTienHang.ToString("#,##0.00")</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Phí vận chuyển:</h5>
                            <div class="">
                                <p class="mb-0">$ @PhiVanChuyen.ToString("#,##0.00")</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">@Model.DiaChi</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Thành tiền:</h5>
                        <p class="mb-0 pe-4">$ @ThanhTien.ToString("#,##0.00")</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Phương thức thanh toán:</h5>
                        <p class="mb-0 pe-4">@Model.CachThanhToan</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
